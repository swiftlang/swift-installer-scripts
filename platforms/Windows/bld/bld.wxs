<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">

  <?if $(ProductArchitecture) = "amd64"?>
    <?define ArchTriple = "x86_64-unknown-windows-msvc"?>
  <?elseif $(ProductArchitecture) = "arm64"?>
    <?define ArchTriple = "aarch64-unknown-windows-msvc"?>
  <?endif?>

  <Package
